{
  "private": true,
  "name": "eticaret-backend-node",
  "workspaces": [
    "services/*",
    "libs/*"
  ],
  "scripts": {
    "prestart": "cp scripts/pre-commit .git/hooks/ && chmod +x .git/hooks/pre-commit && echo 'hook copied'",
    "prestart:windows": "powershell 'Copy-Item scripts/pre-commit .git/hooks/'  && echo 'hook copied'",
    "test" : "cd services/product && yarn test",
    "test:e2e" : "cd services/gateway && yarn test:e2e",
    "create-db": "npx run-url https://raw.githubusercontent.com/takimbirprojeler/eticaretmain/main/create-db.js",
    "load:proto": "bash './scripts/load-proto.sh'"
  }
}
